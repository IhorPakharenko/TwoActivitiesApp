<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.isao.twoactivities2.activities.MainActivity">

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="?attr/colorPrimary"-->
    <!--android:elevation="4dp"-->
    <!--android:minHeight="?attr/actionBarSize"-->
    <!--android:transitionName="actionBar"-->
    <!--app:titleTextColor="@android:color/white" />-->

    <Button
        android:id="@+id/listview_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title_activity_listview"
        android:textSize="24sp" />

    <Button
        android:id="@+id/recyclerview_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_recyclerview"
        android:textSize="24sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/contactsview_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_activity_contacts"
            android:textSize="18sp" />

        <Button
            android:id="@+id/pictureview_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_activity_pictureview"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
